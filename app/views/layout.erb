  <body style="background-color: lightslategray;">
    <% if logged_in? %>
        <nav>
          <ul>
            <a href="/logout"><li>Logout</li></a>
            <a href="/ecommerce_entries"><li>See all listings</li></a>
            <a href="/ecommerce_entries/new"><li>Create a listing</li></a>
            <a href="/users/4"><li>Profile</li></a>
          </ul>
        </nav>
    <% end %>
    <div class="wrapper">
    <% if flash[:message] %>
      <h3><%= flash[:message] %></h3>
    <% end %>
    <% if flash[:errors] %>
      <h3 style="color: red;"><%= flash[:errors] %></h3>
    <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>SinatraEcommerceApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
